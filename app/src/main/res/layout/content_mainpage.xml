<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.pranto.krishokerhasi.activity.MainActivity"
    tools:showIn="@layout/app_bar_mainpage">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="2dp"
        android:background="@color/com_facebook_button_background_color_selected">

        <LinearLayout
            android:id="@+id/textview_contentmain"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:background="@color/com_facebook_button_background_color_selected"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textKrisokerhasi"
                    android:text=" কৃষকের হাসি"
                    android:textSize="55dp"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backimage1"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:layout_below="@+id/textview_contentmain">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backgroundImage1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backimage2"
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:layout_below="@+id/textview_contentmain"
            android:layout_alignParentRight="true">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backgroundImage2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backimage3"
            android:layout_width="200dp"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:layout_below="@+id/backimage1">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview3"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backgroundImage3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
            </android.support.v7.widget.CardView>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/backimage4"
            android:layout_width="180dp"
            android:layout_height="220dp"
            android:orientation="horizontal"
            android:layout_below="@+id/backimage2"
            android:layout_alignParentRight="true">

            <android.support.v7.widget.CardView
                android:id="@+id/cardview4"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/backgroundImage4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    />
            </android.support.v7.widget.CardView>

        </LinearLayout>



    </RelativeLayout>

</RelativeLayout>

